<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    android:background="@drawable/welcome_slide2_bg">

    <TextView
        android:id="@+id/slide2_heading"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="120dp"
        android:text="@string/slide2_heading"
        android:textSize="45sp"
        android:textColor="@color/black"
        android:fontFamily="@font/productsans_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/slide2_desc"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="00dp"
        android:layout_marginTop="20dp"
        android:lineHeight="24dp"
        android:text="@string/slide2_desc"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/productsans_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/slide2_heading" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="0dp"
        android:text="@string/slide2_button_label"
        android:textAllCaps="false"
        android:fontFamily="@font/productsans_regular"
        android:background="@drawable/edittext_bg"
        android:textColor="@color/white"
        android:onClick="launchSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide2_desc"/>

</androidx.constraintlayout.widget.ConstraintLayout>